<style>
    .footer {
        background: var(--oxford-navy);
        color: white;
        padding: 4rem 0 0;
        margin-top: 4rem;
    }

    .footer-grid {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr;
        gap: 4rem;
        padding-bottom: 4rem;
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 1.5rem;
        font-weight: 700;
        color: white;
        margin-bottom: 1.5rem;
    }

    .logo-text .accent {
        color: var(--cerulean);
    }

    .footer-desc {
        color: rgba(255, 255, 255, 0.7);
        max-width: 400px;
    }

    h3 {
        color: white;
        margin-bottom: 1.5rem;
        font-size: 1.2rem;
    }

    .footer-links ul {
        list-style: none;
    }

    .footer-links li {
        margin-bottom: 0.8rem;
    }

    .footer-links a {
        color: rgba(255, 255, 255, 0.7);
    }

    .footer-links a:hover {
        color: white;
    }

    .social-icons {
        display: flex;
        flex-direction: column;
        gap: 0.8rem;
    }

    .social-icons a {
        color: rgba(255, 255, 255, 0.7);
    }

    .social-icons a:hover {
        color: white;
    }

    .footer-bottom {
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding: 2rem 0;
        text-align: center;
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.5);
    }

    @media (max-width: 768px) {
        .footer-grid {
            grid-template-columns: 1fr;
            gap: 2rem;
        }
    }
</style>
