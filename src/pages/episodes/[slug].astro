---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import { episodes } from "../../data/episodes";
import { episodeDetails } from "../../data/episode-details";

export async function getStaticPaths() {
    return episodes.map((ep) => {
        const details = episodeDetails[ep.slug] || {
            summary: `Episode ${ep.id} of the Seerah series.`,
            highlights: [
                "Life of the Prophet ﷺ",
                "Historical Context",
                "Spiritual Lessons",
            ],
            fullContent:
                "Detailed notes for this episode are coming soon. Please enjoy the audio and video content in the meantime.",
            youtubeId: "vB-r3y9Y1_E", // Fallback ID
        };

        return {
            params: { slug: ep.slug },
            props: {
                episode: {
                    ...ep,
                    ...details,
                    series: "Prophetic Biography",
                    speaker: "Abdul Nasir Jangda",
                },
            },
        };
    });
}

const { episode } = Astro.props;
---

<Layout title={`${episode.title} - Seerah Podcast`}>
    <Navbar />

    <main class="episode-page">
        <header class="episode-hero">
            <div class="container container--narrow">
                <a href="/episodes" class="back-button">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><line x1="19" y1="12" x2="5" y2="12"></line><polyline
                            points="12 19 5 12 12 5"></polyline></svg
                    >
                    Back to Library
                </a>

                <h1 class="gradient-title">{episode.title}</h1>

                <div class="meta-row">
                    <div class="meta-pill">
                        <span class="label">Series</span>
                        <span class="value">{episode.series}</span>
                    </div>
                    <div class="meta-pill">
                        <span class="label">Speaker</span>
                        <span class="value">{episode.speaker}</span>
                    </div>
                    <div class="meta-pill">
                        <span class="label">Duration</span>
                        <span class="value">{episode.duration}</span>
                    </div>
                    <div class="meta-pill">
                        <span class="label">Episode</span>
                        <span class="value">#{episode.id}</span>
                    </div>
                </div>

                <div class="custom-player" id="audio-player-root">
                    <audio id="main-audio" src={episode.link} preload="metadata"
                    ></audio>

                    <div class="player-cover">
                        <img src="/thumb.jpg" alt="Seerah Episode Thumbnail" />
                    </div>

                    <div class="player-controls">
                        <div class="player-info-mini">
                            <span class="now-playing">Now Playing</span>
                            <h3 class="player-title">{episode.title}</h3>
                        </div>

                        <div class="playback-controls">
                            <button
                                class="play-trigger"
                                id="play-pause-btn"
                                aria-label="Play"
                            >
                                <svg
                                    class="play-icon"
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="32"
                                    height="32"
                                    viewBox="0 0 24 24"
                                    fill="currentColor"
                                    ><path d="M8 5.14v13.72L19 12z"></path></svg
                                >
                                <svg
                                    class="pause-icon"
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="32"
                                    height="32"
                                    viewBox="0 0 24 24"
                                    fill="currentColor"
                                    style="display: none;"
                                    ><path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"
                                    ></path></svg
                                >
                            </button>

                            <div class="progress-container">
                                <div class="time-display">
                                    <span id="current-time">0:00</span>
                                    <span id="total-duration"
                                        >{episode.duration}</span
                                    >
                                </div>
                                <div
                                    class="progress-bar-wrapper"
                                    id="progress-wrapper"
                                >
                                    <div class="progress-bar-bg">
                                        <div
                                            class="progress-fill"
                                            id="progress-fill"
                                        >
                                        </div>
                                    </div>
                                    <input
                                        type="range"
                                        id="seek-slider"
                                        min="0"
                                        value="0"
                                        step="0.1"
                                        aria-label="Seek audio"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="action-bar">
                    <button class="circle-action" aria-label="Share on Twitter">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="18"
                            height="18"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><path
                                d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"
                            ></path></svg
                        >
                    </button>
                    <button
                        class="circle-action"
                        aria-label="Share on WhatsApp"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="18"
                            height="18"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><path
                                d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 1 1-7.6-14 8.38 8.38 0 0 1 3.8.9L21 3.2z"
                            ></path></svg
                        >
                    </button>
                </div>
            </div>
        </header>

        <article class="episode-article">
            <div class="container container--narrow">
                <section class="intro-section">
                    <p class="summary-text">{episode.summary}</p>
                </section>

                {
                    episode.highlights && episode.highlights.length > 0 && (
                        <section class="highlights-box">
                            <h2>Key Highlights</h2>
                            <ul class="highlights-grid">
                                {episode.highlights.map((point: string) => (
                                    <li>
                                        <span>{point}</span>
                                    </li>
                                ))}
                            </ul>
                        </section>
                    )
                }

                <section class="details-section">
                    <h2>Full Episode Experience</h2>
                    <div class="content-prose">
                        {episode.fullContent}
                    </div>
                </section>

                {
                    episode.youtubeId && (
                        <section class="video-section">
                            <h2 class="section-title">Watch the Video</h2>
                            <div class="video-frame">
                                <iframe
                                    src={`https://www.youtube.com/embed/${episode.youtubeId}`}
                                    title="YouTube video player"
                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                    allowfullscreen
                                />
                            </div>
                        </section>
                    )
                }
            </div>
        </article>
    </main>

    <Footer />
</Layout>

<style>
    .episode-page {
        background: #ffffff;
        color: var(--text-main);
    }

    .container--narrow {
        max-width: 1000px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    /* Hero Styling */
    .episode-hero {
        padding: 5.5rem 0 4.5rem;
        background: linear-gradient(
            165deg,
            var(--oxford-navy) 0%,
            #112240 100%
        );
        color: white;
        position: relative;
        overflow: hidden;
    }

    .episode-hero::after {
        content: "";
        position: absolute;
        top: -10%;
        right: -10%;
        width: 50%;
        height: 80%;
        /* background: radial-gradient(
            circle at center,
            rgba(72, 119, 146, 0.12),
            transparent 70%
        ); */
        pointer-events: none;
    }

    .back-button {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        color: white;
        font-weight: 700;
        margin-bottom: 2rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 0.1em;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.2);
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        backdrop-filter: blur(10px);
    }

    .back-button:hover {
        background: var(--cerulean);
        border-color: var(--cerulean);
        transform: translateY(-3px);
        box-shadow: 0 10px 20px -5px rgba(0, 0, 0, 0.3);
    }

    .back-button svg {
        transition: transform 0.3s ease;
    }

    .back-button:hover svg {
        transform: translateX(-4px);
    }

    .gradient-title {
        font-size: clamp(2.5rem, 7vw, 4.2rem);
        line-height: 1.05;
        margin-bottom: 1.5rem;
        font-weight: 900;
        color: white;
        letter-spacing: -0.02em;
    }

    .meta-row {
        display: flex;
        gap: 2rem;
        margin-bottom: 2.5rem;
        flex-wrap: wrap;
    }

    .meta-pill {
        display: flex;
        align-items: baseline;
        gap: 0.5rem;
    }

    .meta-pill .label {
        font-size: 0.75rem;
        font-weight: 800;
        color: rgba(255, 255, 255, 0.6);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .meta-pill .value {
        font-weight: 600;
        color: white;
        font-size: 1rem;
    }

    .custom-player {
        margin-bottom: 3.5rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 20px;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        display: flex;
        gap: 2rem;
        padding: 1.5rem;
        align-items: center;
    }

    .player-cover {
        width: 120px;
        height: 120px;
        border-radius: 12px;
        overflow: hidden;
        flex-shrink: 0;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }

    .player-cover img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .player-controls {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .now-playing {
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 0.2em;
        color: var(--cerulean);
        font-weight: 700;
        margin-bottom: 0.25rem;
        display: block;
    }

    .player-title {
        font-size: 1.25rem;
        margin: 0;
        color: white;
    }

    .playback-controls {
        display: flex;
        align-items: center;
        gap: 1.5rem;
    }

    .play-trigger {
        width: 56px;
        height: 56px;
        border-radius: 50%;
        background: var(--cerulean);
        border: none;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition:
            transform 0.2s,
            background 0.2s;
        flex-shrink: 0;
    }

    .play-trigger:hover {
        transform: scale(1.05);
        background: #5ba1c7;
    }

    .progress-container {
        flex-grow: 1;
    }

    .time-display {
        display: flex;
        justify-content: space-between;
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.6);
        margin-bottom: 0.5rem;
        font-family: monospace;
    }

    .progress-bar-wrapper {
        position: relative;
        height: 6px;
        cursor: pointer;
    }

    .progress-bar-bg {
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        overflow: hidden;
    }

    .progress-fill {
        width: 0%;
        height: 100%;
        background: var(--cerulean);
        border-radius: 10px;
    }

    #seek-slider {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        cursor: pointer;
        margin: 0;
    }

    @media (max-width: 768px) {
        .custom-player {
            flex-direction: column;
            text-align: center;
            padding: 2rem;
            gap: 1.5rem;
        }
        .player-cover {
            width: 200px;
            height: 200px;
        }
        .player-controls {
            width: 100%;
        }
        .playback-controls {
            flex-direction: column;
            gap: 1.5rem;
            width: 100%;
        }
        .play-trigger {
            order: 1;
        }
        .progress-container {
            width: 100%;
            order: 2;
        }
    }

    .action-bar {
        display: flex;
        gap: 1.25rem;
    }

    .circle-action {
        width: 44px;
        height: 44px;
        border-radius: 50%;
        border: 1px solid rgba(255, 255, 255, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 255, 255, 0.05);
        color: rgba(255, 255, 255, 0.8);
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .circle-action:hover {
        border-color: var(--cerulean);
        color: white;
        background: var(--cerulean);
        transform: translateY(-3px);
    }

    /* Article Content */
    .episode-article {
        padding: 5rem 0 8rem;
    }

    .summary-text {
        font-size: clamp(1.3rem, 4vw, 1.6rem);
        line-height: 1.55;
        color: var(--oxford-navy);
        font-weight: 500;
        margin-bottom: 4rem;
        letter-spacing: -0.01em;
    }

    .highlights-box {
        background: rgba(72, 119, 146, 0.05);
        border-radius: var(--radius-sm);
        padding: 2.5rem 3rem;
        margin-bottom: 5rem;
        border-left: 5px solid var(--cerulean);
    }

    .highlights-box h2 {
        font-size: 1.6rem;
        margin-bottom: 1.5rem;
        color: var(--oxford-navy);
        font-weight: 800;
    }

    .highlights-grid {
        list-style: none;
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.25rem;
    }

    .highlights-grid li {
        display: flex;
        gap: 1rem;
        font-size: 1.15rem;
        line-height: 1.6;
        color: var(--text-main);
        align-items: flex-start;
    }

    .highlights-grid li::before {
        content: "•";
        color: var(--cerulean);
        font-weight: bold;
        font-size: 1.5rem;
        line-height: 1;
        margin-top: -0.1rem;
    }

    .details-section h2,
    .video-section h2 {
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
        color: var(--oxford-navy);
        font-weight: 800;
    }

    .content-prose {
        font-size: 1.25rem;
        line-height: 1.85;
        color: #4a5568;
        margin-bottom: 5rem;
    }

    .details-section h2,
    .video-section h2 {
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
        color: var(--oxford-navy);
        font-weight: 800;
    }

    .video-section {
        margin-top: 4rem;
    }

    .video-frame {
        position: relative;
        padding-bottom: 56.25%;
        height: 0;
        border-radius: 24px;
        overflow: hidden;
        box-shadow: 0 20px 40px -20px rgba(0, 0, 0, 0.2);
    }

    .video-frame iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: none;
    }

    @media (max-width: 768px) {
        .episode-hero {
            padding: 4rem 1.5rem 3rem;
        }

        .gradient-title {
            font-size: 2rem;
            margin-bottom: 1.25rem;
            letter-spacing: -0.01em;
        }

        .back-button {
            padding: 0.6rem 1rem;
            font-size: 0.7rem;
            margin-bottom: 1.5rem;
        }

        .meta-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1.5rem 1rem;
            margin-bottom: 2.5rem;
        }

        .meta-pill {
            flex-direction: column;
            gap: 0.1rem;
        }

        .meta-pill .label {
            font-size: 0.6rem;
            opacity: 0.7;
        }

        .meta-pill .value {
            font-size: 0.85rem;
            font-weight: 700;
        }

        .custom-player {
            padding: 1.5rem;
            margin-bottom: 3rem;
        }

        .summary-text {
            font-size: 1.1rem;
            line-height: 1.6;
            margin-bottom: 3rem;
        }

        .content-prose {
            font-size: 1.05rem;
            line-height: 1.75;
        }

        .highlights-box {
            padding: 1.75rem 1.25rem;
            border-radius: 12px;
        }

        .highlights-box h2 {
            font-size: 1.3rem;
        }

        .highlights-grid li {
            font-size: 1rem;
        }
    }
</style>

<script>
    const audio = document.getElementById("main-audio") as HTMLAudioElement;
    const playPauseBtn = document.getElementById("play-pause-btn");
    const playIcon = playPauseBtn?.querySelector(".play-icon") as HTMLElement;
    const pauseIcon = playPauseBtn?.querySelector(".pause-icon") as HTMLElement;
    const progressFill = document.getElementById("progress-fill");
    const seekSlider = document.getElementById(
        "seek-slider",
    ) as HTMLInputElement;
    const currentTimeEl = document.getElementById("current-time");
    const totalDurationEl = document.getElementById("total-duration");

    const formatTime = (seconds: number) => {
        const mins = Math.floor(seconds / 60);
        const secs = Math.floor(seconds % 60);
        return `${mins}:${secs.toString().padStart(2, "0")}`;
    };

    if (playPauseBtn && audio) {
        playPauseBtn.addEventListener("click", () => {
            if (audio.paused) {
                audio.play();
                playIcon.style.display = "none";
                pauseIcon.style.display = "block";
            } else {
                audio.pause();
                playIcon.style.display = "block";
                pauseIcon.style.display = "none";
            }
        });

        audio.addEventListener("timeupdate", () => {
            const progress = (audio.currentTime / audio.duration) * 100;
            if (progressFill) progressFill.style.width = `${progress}%`;
            if (seekSlider) seekSlider.value = audio.currentTime.toString();
            if (currentTimeEl)
                currentTimeEl.textContent = formatTime(audio.currentTime);
        });

        audio.addEventListener("loadedmetadata", () => {
            if (seekSlider) seekSlider.max = audio.duration.toString();
            if (totalDurationEl)
                totalDurationEl.textContent = formatTime(audio.duration);
        });

        seekSlider?.addEventListener("input", () => {
            audio.currentTime = parseFloat(seekSlider.value);
            if (currentTimeEl)
                currentTimeEl.textContent = formatTime(audio.currentTime);
        });
    }
</script>
