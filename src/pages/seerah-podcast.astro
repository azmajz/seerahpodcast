        gap: 1rem;
    }

    .episode-row {
        padding: 1.5rem;
        background: white;
        border-radius: 18px;
        border: 1px solid rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
    }

    .episode-row:hover {
        border-color: var(--cerulean);
        box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.05);
    }

    .episode-row.active-playing {
        border-color: var(--cerulean);
        background: #fdfdfd;
        box-shadow: 0 10px 40px -15px rgba(72, 119, 146, 0.15);
    }

    .row-main {
        display: grid;
        grid-template-columns: 40px 60px 1fr auto;
        align-items: center;
        gap: 1rem;
    }

    .ep-id {
        font-weight: 800;
        color: var(--text-muted);
        opacity: 0.3;
        font-size: 1.2rem;
    }

    .play-btn-inline {
        width: 45px;
        height: 45px;
        border-radius: 12px;
        border: none;
        background: var(--oxford-navy);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s;
        font-size: 1rem;
    }

    .play-btn-inline:hover {
        background: var(--cerulean);
        transform: scale(1.05);
    }

    .ep-info h3 {
        font-size: 1.25rem;
        margin-bottom: 0.2rem;
        color: var(--oxford-navy);
    }

    .ep-meta {
        font-size: 0.9rem;
        color: var(--text-muted);
        font-weight: 500;
    }

    .btn-download {
        color: var(--text-muted);
        transition: color 0.2s;
    }

    .btn-download:hover {
        color: var(--oxford-navy);
    }

    .row-player {
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid rgba(0, 0, 0, 0.05);
    }

    .row-player audio {
        width: 100%;
        height: 40px;
    }

    /* Sidebar */
    .platforms-sidebar {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .sidebar-card {
        padding: 2.5rem;
    }

    .sidebar-card h3 {
        margin-bottom: 1rem;
        font-size: 1.5rem;
    }

    .sidebar-card p {
        color: var(--text-muted);
        font-size: 0.95rem;
        line-height: 1.6;
        margin-bottom: 2rem;
    }

    .platform-links {
        display: flex;
        flex-direction: column;
        gap: 1.2rem;
    }

    .platform-link {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1.2rem;
        background: rgba(255, 255, 255, 0.5);
        border-radius: 12px;
        border: 1px solid rgba(0, 0, 0, 0.03);
        transition: all 0.3s;
    }

    .platform-link:hover {
        background: white;
        border-color: var(--cerulean);
        transform: translateX(5px);
    }

    .p-icon {
        font-size: 1.8rem;
    }

    .p-text strong {
        display: block;
        font-size: 1rem;
        color: var(--oxford-navy);
    }

    .p-text span {
        font-size: 0.8rem;
        color: var(--text-muted);
    }

    .sidebar-card.promo {
        background: linear-gradient(135deg, var(--oxford-navy), #2c3e50);
        color: white;
        border: none;
    }

    .sidebar-card.promo h4 {
        color: white;
        margin-bottom: 0.8rem;
    }

    .sidebar-card.promo p {
        color: rgba(255, 255, 255, 0.7);
    }

    /* Animations */
    .reveal-on-scroll {
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.8s cubic-bezier(0.2, 1, 0.2, 1);
    }

    .reveal-on-scroll.is-visible {
        opacity: 1;
        transform: translateY(0);
    }

    .hidden {
        display: none;
    }

    @media (max-width: 1024px) {
        .content-grid {
            grid-template-columns: 1fr;
        }
        .platforms-sidebar {
            order: -1;
        }
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2.8rem;
        }
        .row-main {
            grid-template-columns: 50px 1fr;
        }
        .ep-id,
        .ep-actions {
            display: none;
        }
        .sidebar-card {
            padding: 1.5rem;
        }
    }
</style>
