---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { episodes } from "../data/episodes";
---

<Layout title="Podcast Archive | Stream Everywhere">
    <Navbar />

    <header class="page-header">
        <div class="container text-center">
            <h1>Podcast <span class="gradient-text">Archive</span></h1>
            <p>
                Listen to the Seerah series on your favorite podcast platform.
            </p>
        </div>
    </header>

    <main class="container archive-container">
        <div class="platforms-grid">
            <a href="#" class="platform-card glass-card">
                <span class="platform-icon">üçé</span>
                <h3>Apple Podcasts</h3>
                <p>Subscribe for early access and exclusive notes.</p>
            </a>
            <a href="#" class="platform-card glass-card">
                <span class="platform-icon">üü¢</span>
                <h3>Spotify</h3>
                <p>Stream all 200 episodes for free on Spotify.</p>
            </a>
            <a
                href="https://www.youtube.com/@seerahoftheprophetmuhammadsaw"
                target="_blank"
                class="platform-card glass-card"
            >
                <span class="platform-icon">üî¥</span>
                <h3>YouTube</h3>
                <p>Watch with cinematic visuals and historical maps.</p>
            </a>
            <a
                href="https://archive.org/details/seerah_life_of_the_prophet_saw"
                target="_blank"
                class="platform-card glass-card"
            >
                <span class="platform-icon">üèõÔ∏è</span>
                <h3>Archive.org</h3>
                <p>The original audio archive and raw recordings.</p>
            </a>
        </div>

        <section class="archive-list glass-card">
            <h2>Complete Archive (2020 - 2024)</h2>
            <div class="archive-table-wrapper">
                <table class="archive-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Episode Title</th>
                            <th>Duration</th>
                            <th>Resource</th>
                        </tr>
                    </thead>
                    <tbody>
                        {
                            episodes.map((ep) => (
                                <tr>
                                    <td>{ep.id}</td>
                                    <td>{ep.title}</td>
                                    <td>{ep.duration}</td>
                                    <td>
                                        <a href={`/seerah/${ep.slug}`}>
                                            Listen
                                        </a>
                                    </td>
                                </tr>
                            ))
                        }
                        <tr>
                            <td
                                colspan="4"
                                style="text-align:center; padding: 2rem; color: var(--text-muted);"
                            >
                                200+ more episodes available in the main list.
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </section>
    </main>

    <Footer />
</Layout>

<style>
    .page-header {
        padding: 6rem 0 4rem;
        text-align: center;
    }
    h1 {
        font-size: 3.5rem;
        margin-bottom: 1.5rem;
    }
    .page-header p {
        font-size: 1.25rem;
        color: var(--text-muted);
    }

    .archive-container {
        margin-bottom: 8rem;
    }

    .platforms-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-bottom: 4rem;
    }

    .platform-card {
        padding: 2.5rem;
        text-align: center;
        transition: transform 0.3s;
    }

    .platform-card:hover {
        transform: translateY(-5px);
    }

    .platform-icon {
        font-size: 3rem;
        display: block;
        margin-bottom: 1.5rem;
    }
    .platform-card h3 {
        margin-bottom: 0.8rem;
    }
    .platform-card p {
        font-size: 0.95rem;
        color: var(--text-muted);
    }

    .archive-list {
        padding: 3rem;
    }
    .archive-list h2 {
        margin-bottom: 2rem;
    }

    .archive-table-wrapper {
        overflow-x: auto;
    }
    .archive-table {
        width: 100%;
        border-collapse: collapse;
        text-align: left;
    }

    .archive-table th {
        padding: 1rem;
        border-bottom: 2px solid rgba(0, 0, 0, 0.05);
        color: var(--oxford-navy);
    }

    .archive-table td {
        padding: 1.2rem 1rem;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .archive-table a {
        color: var(--cerulean);
        font-weight: 600;
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2.5rem;
        }
        .archive-list {
            padding: 1.5rem;
        }
    }
</style>
