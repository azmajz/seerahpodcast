---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { episodes } from "../data/episodes";

const archiveBaseUrl =
    "https://archive.org/download/seerah_life_of_the_prophet_saw/";

const fullEpisodes = episodes.map((ep) => ({
    ...ep,
    audioUrl: `${archiveBaseUrl}${ep.id}%20-%20${ep.title.replace(/ /g, "%20")}.mp3`,
}));
---

<Layout title="Audio Library | Seerah of the Prophet Ô∑∫">
    <Navbar />

    <header class="page-header">
        <div class="container">
            <div class="header-content reveal-on-scroll">
                <span class="badge">Prophetic Biography</span>
                <h1>
                    Experience the <span class="gradient-text"
                        >Prophetic Journey</span
                    >
                </h1>
                <p>
                    Listen to every detail of the greatest life ever lived,
                    narrated with love and scholarly depth.
                </p>
            </div>
        </div>
    </header>

    <main class="container main-layout">
        <div class="content-grid">
            <!-- Main Audio List -->
            <section class="audio-library">
                <div class="library-header reveal-on-scroll">
                    <h2>Series Chronicles</h2>
                    <p>
                        {fullEpisodes.length} Lessons of faith, perseverance, and
                        character
                    </p>
                </div>

                <div class="episodes-list">
                    {
                        fullEpisodes.map((ep) => (
                            <div
                                class="episode-row reveal-on-scroll"
                                id={`episode-${ep.id}`}
                            >
                                <div class="row-main">
                                    <div class="ep-id">{ep.id}</div>
                                    <div class="play-control">
                                        <button
                                            class="play-btn-inline"
                                            data-audio={ep.audioUrl}
                                            aria-label="Play"
                                        >
                                            <span class="icon">‚ñ∂</span>
                                        </button>
                                    </div>
                                    <div class="ep-info">
                                        <h3>{ep.title}</h3>
                                        <span class="ep-meta">
                                            Series 1 ‚Ä¢ {ep.duration}
                                        </span>
                                    </div>
                                    <div class="ep-actions">
                                        <a
                                            href={ep.audioUrl}
                                            download
                                            class="btn-download"
                                            title="Download MP3"
                                        >
                                            <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                width="18"
                                                height="18"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                            >
                                                <>
                                                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v4" />
                                                    <polyline points="7 10 12 15 17 10" />
                                                    <line
                                                        x1="12"
                                                        y1="15"
                                                        x2="12"
                                                        y2="3"
                                                    />
                                                </>
                                            </svg>
                                        </a>
                                    </div>
                                </div>
                                <div class="row-player hidden">
                                    <audio controls preload="none">
                                        <source
                                            src={ep.audioUrl}
                                            type="audio/mpeg"
                                        />
                                        Your browser does not support the audio
                                        element.
                                    </audio>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </section>

            <!-- Sidebar Platforms -->
            <aside class="platforms-sidebar">
                <div class="sidebar-card glass-card reveal-on-scroll">
                    <h3>Join the Journey</h3>
                    <p>
                        Listen on your preferred platform and never miss a
                        lesson from the life of the Messenger Ô∑∫.
                    </p>
                    <div class="platform-links">
                        <a href="#" class="platform-link">
                            <span class="p-icon">üçé</span>
                            <div class="p-text">
                                <strong>Apple Podcasts</strong>
                                <span>Native iOS Exprience</span>
                            </div>
                        </a>
                        <a href="#" class="platform-link">
                            <span class="p-icon">üü¢</span>
                            <div class="p-text">
                                <strong>Spotify</strong>
                                <span>Official Playlist</span>
                            </div>
                        </a>
                        <a
                            href="https://www.youtube.com/@seerahoftheprophetmuhammadsaw"
                            target="_blank"
                            class="platform-link"
                        >
                            <span class="p-icon">üî¥</span>
                            <div class="p-text">
                                <strong>YouTube</strong>
                                <span>Video Lessons</span>
                            </div>
                        </a>
                        <a
                            href="https://archive.org/details/seerah_life_of_the_prophet_saw"
                            target="_blank"
                            class="platform-link"
                        >
                            <span class="p-icon">üèõÔ∏è</span>
                            <div class="p-text">
                                <strong>Archive.org</strong>
                                <span>MP3 Database</span>
                            </div>
                        </a>
                    </div>
                </div>

                <div class="sidebar-card promo glass-card reveal-on-scroll">
                    <h4>The Seerah Pearls Series</h4>
                    <p>
                        Narrated by Shaykh Abdul Nasir Jangda, this 200-part
                        series is a deeply scholarly and emotionally resonant
                        account of the Prophetic biography.
                    </p>
                </div>
            </aside>
        </div>
    </main>

    <Footer />
</Layout>

<script>
    const playButtons = document.querySelectorAll(".play-btn-inline");
    let currentlyPlaying: HTMLAudioElement | null = null;

    playButtons.forEach((btn) => {
        btn.addEventListener("click", () => {
            const row = btn.closest(".episode-row") as HTMLElement;
            const playerDiv = row.querySelector(".row-player") as HTMLElement;
            const audio = row.querySelector("audio") as HTMLAudioElement;
            const icon = btn.querySelector(".icon") as HTMLElement;

            // If another audio is playing, stop it
            if (currentlyPlaying && currentlyPlaying !== audio) {
                currentlyPlaying.pause();
                const activeRow = currentlyPlaying.closest(
                    ".episode-row",
                ) as HTMLElement;
                const activeBtn = activeRow.querySelector(
                    ".play-btn-inline .icon",
                ) as HTMLElement;
                const activePlayerDiv = activeRow.querySelector(
                    ".row-player",
                ) as HTMLElement;

                activeBtn.textContent = "‚ñ∂";
                activePlayerDiv.classList.add("hidden");
                activeRow.classList.remove("active-playing");
            }

            if (audio.paused) {
                audio.play();
                icon.textContent = "‚è∏";
                playerDiv.classList.remove("hidden");
                row.classList.add("active-playing");
                currentlyPlaying = audio;
            } else {
                audio.pause();
                icon.textContent = "‚ñ∂";
                // We keep the player open once it's been activated
                currentlyPlaying = null;
            }
        });
    });

    // Scroll reveal
    const observer = new IntersectionObserver(
        (entries) => {
            entries.forEach((entry) => {
                if (entry.isIntersecting) {
                    entry.target.classList.add("is-visible");
                }
            });
        },
        { threshold: 0.1 },
    );

    document
        .querySelectorAll(".reveal-on-scroll")
        .forEach((el) => observer.observe(el));
</script>

<style>
    .page-header {
        padding: 8rem 0 4rem;
        background: radial-gradient(
            circle at 10% 10%,
            rgba(72, 119, 146, 0.05),
            transparent 40%
        );
    }

    h1 {
        font-size: 4rem;
        font-weight: 800;
        margin-bottom: 1.5rem;
    }

    .badge {
        display: inline-block;
        padding: 0.5rem 1rem;
        background: rgba(72, 119, 146, 0.1);
        color: var(--cerulean);
        border-radius: 50px;
