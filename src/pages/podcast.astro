---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { episodes } from "../data/episodes";

const fullEpisodes = episodes.map((ep) => ({
    ...ep,
    audioUrl: ep.link,
}));
---

<Layout title="Audio Library | Seerah of the Prophet Ô∑∫">
    <Navbar />

    <header class="page-header">
        <div class="container">
            <div class="header-content reveal-on-scroll">
                <span class="badge">Prophetic Biography</span>
                <h1>
                    Experience the <span class="gradient-text"
                        >Prophetic Journey</span
                    >
                </h1>
                <p>
                    Listen to every detail of the greatest life ever lived,
                    narrated with love and scholarly depth.
                </p>
            </div>
        </div>
    </header>

    <main class="container main-layout">
        <div class="content-grid">
            <!-- Main Audio List -->
            <section class="audio-library">
                <div class="library-header reveal-on-scroll">
                    <h2>Seerah Pearls</h2>
                    <p>
                        {fullEpisodes.length} Lessons of faith, perseverance, and
                        character
                    </p>
                </div>

                <div class="search-box glass-card reveal-on-scroll">
                    <input
                        type="text"
                        id="podSearch"
                        placeholder="Find an episode by name or number..."
                    />
                </div>

                <div class="episodes-list" id="podList">
                    {
                        fullEpisodes.map((ep) => (
                            <div
                                class="episode-row reveal-on-scroll pod-item"
                                id={`episode-${ep.id}`}
                                data-title={ep.title.toLowerCase()}
                                data-id={ep.id}
                            >
                                <div class="row-main">
                                    <div class="ep-id">{ep.id}</div>
                                    <div class="play-control">
                                        <button
                                            class="play-btn-inline"
                                            data-audio={ep.audioUrl}
                                            aria-label="Play"
                                        >
                                            <span class="icon">
                                                <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    width="20"
                                                    height="20"
                                                    viewBox="0 0 24 24"
                                                >
                                                    <path
                                                        fill="currentColor"
                                                        d="M8 5.14v14l11-7l-11-7Z"
                                                    />
                                                </svg>
                                            </span>
                                        </button>
                                    </div>
                                    <div class="ep-info">
                                        <h3>{ep.title}</h3>
                                        <span class="ep-meta">
                                            Seerah ‚Ä¢ {ep.duration}
                                        </span>
                                    </div>
                                    <div class="ep-actions">
                                        <a
                                            href={ep.audioUrl}
                                            download
                                            class="btn-download"
                                            title="Download MP3"
                                        >
                                            <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                width="18"
                                                height="18"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                            >
                                                <>
                                                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v4" />
                                                    <polyline points="7 10 12 15 17 10" />
                                                    <line
                                                        x1="12"
                                                        y1="15"
                                                        x2="12"
                                                        y2="3"
                                                    />
                                                </>
                                            </svg>
                                        </a>
                                    </div>
                                </div>
                                <div class="row-player hidden">
                                    <audio controls preload="none">
                                        <source
                                            src={ep.audioUrl}
                                            type="audio/mpeg"
                                        />
                                        Your browser does not support the audio
                                        element.
                                    </audio>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </section>

            <!-- Sidebar Platforms -->
            <aside class="platforms-sidebar">
                <div class="sidebar-card glass-card reveal-on-scroll">
                    <h3>Join the Journey</h3>
                    <p>
                        Listen on your preferred platform and never miss a
                        lesson from the life of the Messenger Ô∑∫.
                    </p>
                    <div class="platform-links">
                        <a
                            href="https://www.youtube.com/@seerahoftheprophetmuhammadsaw"
                            target="_blank"
                            class="platform-link"
                        >
                            <span class="p-icon">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="32"
                                    height="32"
                                    viewBox="0 0 24 24"
                                    ><path
                                        fill="#FF0000"
                                        d="m10 15l5.19-3L10 9v6m11.56-7.83c.13.47.22 1.1.28 1.9s.17 1.76.17 2.93c0 1.17-.11 2.13-.17 2.93s-.15 1.43-.28 1.91c-.15.65-.5 1-1 1.19c-.69.24-1.9.44-3.61.59c-1.71.15-3.75.22-6.14.22c-2.39 0-4.43-.07-6.14-.22c-1.71-.15-2.92-.35-3.61-.59c-.51-.19-.86-.54-1.01-1.19c-.13-.48-.22-1.11-.28-1.9s-.17-1.75-.17-2.93c0-1.17.11-2.12.17-2.92s.15-1.43.28-1.92c.15-.65.5-1.01 1-1.19c.7-.24 1.9-.44 3.61-.59c1.71-.15 3.75-.22 6.14-.22s4.43.07 6.14.22s2.92.35 3.61.59c.51.19.86.55 1.01 1.2Z"
                                    ></path></svg
                                >
                            </span>
                            <div class="p-text">
                                <strong>YouTube</strong>
                                <span>Video Lessons</span>
                            </div>
                        </a>
                        <a
                            href="https://archive.org/details/seerah_life_of_the_prophet_saw"
                            target="_blank"
                            class="platform-link"
                        >
                            <span class="p-icon">üèõÔ∏è</span>
                            <div class="p-text">
                                <strong>Archive.org</strong>
                                <span>MP3 Database</span>
                            </div>
                        </a>
                    </div>
                </div>

                <div class="sidebar-card promo glass-card reveal-on-scroll">
                    <h4>The Seerah Pearls Series</h4>
                    <p>
                        Narrated by Shaykh Abdul Nasir Jangda, this 200-part
                        series is a deeply scholarly and emotionally resonant
                        account of the Prophetic biography.
                    </p>
                </div>
            </aside>
        </div>
    </main>

    <Footer />
</Layout>

<script>
    const audios = document.querySelectorAll("audio");

    const PLAY_ICON = `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"><path fill="currentColor" fill-opacity="0" stroke="currentColor" stroke-dasharray="38" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 6l10 6l-10 6Z"><animate fill="freeze" attributeName="stroke-dashoffset" dur="0.5s" values="38;0"/><animate fill="freeze" attributeName="fill-opacity" begin="0.5s" dur="0.4s" to="1"/></path></svg>`;
    const PAUSE_ICON = `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"><path fill="currentColor" d="M14 19V5h4v14h-4Zm-8 0V5h4v14H6Z"/></svg>`;

    audios.forEach((audio) => {
        // When any audio starts playing, pause all others
        audio.addEventListener("play", () => {
            audios.forEach((other) => {
                if (other !== audio) {
                    other.pause();
                    const otherRow = other.closest(
                        ".episode-row",
                    ) as HTMLElement;
                    if (otherRow) {
                        otherRow.classList.remove("active-playing");
                        const otherPlayerDiv = otherRow.querySelector(
                            ".row-player",
                        ) as HTMLElement;
                        const otherIcon = otherRow.querySelector(
                            ".icon",
                        ) as HTMLElement;
                        if (otherPlayerDiv)
                            otherPlayerDiv.classList.add("hidden");
                        if (otherIcon) otherIcon.innerHTML = PLAY_ICON;
                    }
                }
            });

            // Update current row UI
            const row = audio.closest(".episode-row") as HTMLElement;
            if (row) {
                row.classList.add("active-playing");
                const playerDiv = row.querySelector(
                    ".row-player",
                ) as HTMLElement;
                const icon = row.querySelector(".icon") as HTMLElement;
                if (playerDiv) playerDiv.classList.remove("hidden");
                if (icon) icon.innerHTML = PAUSE_ICON;
            }
        });

        audio.addEventListener("pause", () => {
            const row = audio.closest(".episode-row") as HTMLElement;
            const icon = row?.querySelector(".icon") as HTMLElement;
            if (icon) icon.innerHTML = PLAY_ICON;
        });
    });

    const playButtons = document.querySelectorAll(".play-btn-inline");
    playButtons.forEach((btn) => {
        btn.addEventListener("click", () => {
            const row = btn.closest(".episode-row") as HTMLElement;
            const audio = row.querySelector("audio") as HTMLAudioElement;
            if (audio.paused) {
                audio.play();
            } else {
                audio.pause();
            }
        });
    });

    // Search Logic
    const searchInput = document.getElementById(
        "podSearch",
    ) as HTMLInputElement;
    const podItems = document.querySelectorAll(".pod-item");

    searchInput?.addEventListener("input", () => {
        const query = searchInput.value.toLowerCase();
        podItems.forEach((item) => {
            const title = item.getAttribute("data-title") || "";
            const id = item.getAttribute("data-id") || "";
            if (title.includes(query) || id.includes(query)) {
                (item as HTMLElement).style.display = "block";
            } else {
                (item as HTMLElement).style.display = "none";
            }
        });
    });

    // Scroll reveal
    const observer = new IntersectionObserver(
        (entries) => {
            entries.forEach((entry) => {
                if (entry.isIntersecting) {
                    entry.target.classList.add("is-visible");
                }
            });
        },
        { threshold: 0.1 },
    );

    document
        .querySelectorAll(".reveal-on-scroll")
        .forEach((el) => observer.observe(el));
</script>

<style>
    .page-header {
        padding: 6rem 0 4rem;
        background: radial-gradient(
            circle at 10% 10%,
            rgba(72, 119, 146, 0.05),
            transparent 40%
        );
    }

    h1 {
        font-size: clamp(2.5rem, 8vw, 4rem);
        font-weight: 800;
        margin-bottom: 1.5rem;
    }

    .badge {
        display: inline-block;
        padding: 0.5rem 1rem;
        background: rgba(72, 119, 146, 0.1);
        color: var(--cerulean);
        border-radius: 50px;
        font-weight: 700;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 1.5rem;
    }

    .header-content p {
        font-size: clamp(1.1rem, 4vw, 1.25rem);
        color: var(--text-muted);
        max-width: 600px;
    }

    /* Layout */
    .main-layout {
        margin-bottom: 8rem;
        margin-top: 2rem;
    }

    .content-grid {
        display: grid;
        grid-template-columns: 1fr 350px;
        gap: 4rem;
    }

    /* Library */
    .library-header {
        margin-bottom: 3rem;
    }

    .library-header h2 {
        font-size: 2.2rem;
        margin-bottom: 0.5rem;
    }

    .library-header p {
        color: var(--text-muted);
        font-weight: 500;
    }

    .search-box {
        margin-bottom: 2.5rem;
        padding: 0;
        overflow: hidden;
    }

    .search-box input {
        width: 100%;
        padding: 1.5rem 2rem;
        border: none;
        background: transparent;
        font-size: 1.1rem;
        font-family: inherit;
        outline: none;
    }

    .episodes-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .episode-row {
        padding: 1.5rem;
        background: white;
        border-radius: 18px;
        border: 1px solid rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        content-visibility: auto;
        contain-intrinsic-size: 1px 80px; /* Estimated height */
    }

    .episode-row:hover {
        border-color: var(--cerulean);
        box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.05);
    }

    .episode-row.active-playing {
        border-color: var(--cerulean);
        background: #fdfdfd;
        box-shadow: 0 10px 40px -15px rgba(72, 119, 146, 0.15);
    }

    .row-main {
        display: grid;
        grid-template-columns: 40px 60px 1fr auto;
        align-items: center;
        gap: 1rem;
    }

    .ep-id {
        font-weight: 800;
        color: var(--text-muted);
        opacity: 0.3;
        font-size: 1.2rem;
        user-select: none;
    }

    .play-btn-inline {
        width: 45px;
        height: 45px;
        border-radius: 12px;
        border: none;
        background: var(--oxford-navy);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.2s;
        font-size: 1rem;
    }

    .play-btn-inline:hover {
        background: var(--cerulean);
        transform: scale(1.05);
    }

    .ep-info h3 {
        font-size: clamp(1.1rem, 3.5vw, 1.25rem);
        margin-bottom: 0.2rem;
        color: var(--oxford-navy);
        line-height: 1.3;
    }

    .ep-meta {
        font-size: 0.9rem;
        color: var(--text-muted);
        font-weight: 500;
    }

    .btn-download {
        color: var(--text-muted);
        transition: color 0.2s;
    }

    .btn-download:hover {
        color: var(--oxford-navy);
    }

    .row-player {
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 1px solid rgba(0, 0, 0, 0.05);
    }

    .row-player audio {
        width: 100%;
        height: 40px;
    }

    /* Sidebar */
    .platforms-sidebar {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .sidebar-card {
        padding: 2.5rem;
    }

    .sidebar-card h3 {
        margin-bottom: 1rem;
        font-size: 1.5rem;
    }

    .sidebar-card p {
        color: var(--text-muted);
        font-size: 0.95rem;
        line-height: 1.6;
        margin-bottom: 2rem;
    }

    .platform-links {
        display: flex;
        flex-direction: column;
        gap: 1.2rem;
    }

    .platform-link {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1.2rem;
        background: rgba(255, 255, 255, 0.5);
        border-radius: 12px;
        border: 1px solid rgba(0, 0, 0, 0.03);
        transition: all 0.3s;
    }

    .platform-link:hover {
        background: white;
        border-color: var(--cerulean);
        transform: translateX(5px);
    }

    .p-icon:first-child {
        padding-right: 12px;
    }
    .p-icon {
        font-size: 1.8rem;
    }

    .p-text strong {
        display: block;
        font-size: 1rem;
        color: var(--oxford-navy);
    }

    .p-text span {
        font-size: 0.8rem;
        color: var(--text-muted);
    }

    .sidebar-card.promo {
        background: linear-gradient(135deg, var(--oxford-navy), #2c3e50);
        color: white;
        border: none;
    }

    .sidebar-card.promo h4 {
        color: white;
        margin-bottom: 0.8rem;
    }

    .sidebar-card.promo p {
        color: rgba(255, 255, 255, 0.7);
    }

    /* Animations */
    .reveal-on-scroll {
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.8s cubic-bezier(0.2, 1, 0.2, 1);
    }

    .reveal-on-scroll.is-visible {
        opacity: 1;
        transform: translateY(0);
    }

    .hidden {
        display: none;
    }

    @media (max-width: 1024px) {
        .content-grid {
            grid-template-columns: 1fr;
        }
        .platforms-sidebar {
            order: -1;
        }
    }

    @media (max-width: 768px) {
        .page-header {
            padding: 4rem 0 3rem;
        }

        .library-header h2 {
            font-size: 1.8rem;
        }

        .row-main {
            grid-template-columns: 45px 1fr;
            gap: 0.75rem;
        }

        .ep-id {
            display: none;
        }

        .row-main {
            grid-template-columns: 45px 1fr auto;
            gap: 0.75rem;
        }

        .ep-actions {
            display: flex;
            align-items: center;
        }

        .ep-info h3 {
            font-size: 1.1rem;
        }

        .sidebar-card {
            padding: 1.5rem;
        }

        .episode-row {
            padding: 1rem;
        }

        .play-btn-inline {
            width: 40px;
            height: 40px;
        }
    }
</style>
